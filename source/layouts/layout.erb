<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>
    <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/milligram/1.3.0/milligram.min.css" %>
    <%= stylesheet_link_tag "site.css" %>
    <script src="https://cdn.jsdelivr.net/algoliasearch/3/algoliasearchLite.min.js"></script>

    <%= javascript_include_tag "site.bundle.js" %>
    <%= javascript_include_tag "elm.js" %>
  </head>
  <%= partial "partials/nav" %>
  <body>
    <div class="triangle-canvas"></div>
    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>
  </body>
  <%= partial "partials/analytics" %>
</html>
